#################################
##  Apache / Tomcat / Webapp   ##
#################################

# The VM
VM {
	installer: target;
	children: Tomcat, Apache, Mysql;
}

# Tomcat
Tomcat {
	installer: script;
	exports: ip, portAJP = 8009;
	children: Webapp;
}

# Apache Load Balancer
Apache {
	installer: script;
	imports: Tomcat.portAJP, Tomcat.ip;
}

# Webapp
Webapp {
	installer: script;
	imports: Mysql.*;
}

# MySQL
Mysql {
	installer: script;
	exports: ip, port = 33006;
}

